<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/new_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_item_name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/new_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:hint="@string/name"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_item_title"
        app:layout_constraintBottom_toTopOf="@id/new_item_box"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/new_item_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:text="Select Box"
        android:width="200dp"
        android:padding="8dp"
        android:focusable="false"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_item_name"
        app:layout_constraintBottom_toTopOf="@id/new_item_images"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/new_item_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Images"
        android:background="@drawable/edit_text_background"
        android:width="200dp"
        android:padding="8dp"
        android:focusable="false"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_item_box"
        app:layout_constraintBottom_toTopOf="@id/new_item_code"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/new_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code"
        android:background="@drawable/edit_text_background"
        android:width="200dp"
        android:padding="8dp"
        android:focusable="false"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_item_images"
        app:layout_constraintBottom_toTopOf="@id/new_item_category"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/new_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:hint="Tags"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_item_code"
        app:layout_constraintBottom_toTopOf="@id/new_item_description"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/new_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:hint="Description"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_item_category"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>
